<div class='container push--bottom'>
  <div class="desk-wide-seven-tenths desk-seven-tenths lap-seven-tenths palm-one-whole">
    <%= form_tag search_query_path(@search_query), method: :get, id: 'filter_form' do %>
      <div class="grid">
        <div class="grid__item desk-wide-one-quarter desk-one-quarter lap-one-half palm-one-whole">

          <%= label_tag "filter_results", "Filter By" %>
          <%= select_tag(
            :filter_option,
            options_for_select(
              # [%w[Births 1], %w[Deaths 2], %w[Marriages 3]],
              [%w[Baptism 1], %w[Marriage 3], %w[Burial 2]],
              selected: @filter_condition
            ),
            { prompt: "Filter By", id: "filter_results", tabindex: "0" }
          ) %>
        </div>

        <div class="grid__item desk-wide-one-quarter desk-one-quarter lap-one-half palm-one-whole">
          <%= label_tag "sort_results", "Sort By" %>
          <%# select_tag(:sort_option, options_for_select([['First Name(s)', "GivenName"], ['Surname', "Surname"], ['Record Type', "RecordTypeID"], ['Quarter', "QuarterNumber"], ['District', "District"]], selected: @sort_condition), {:prompt => "Sort By", id: 'sort_results', tabindex: "0"}) %>
          <%= select_tag(
            :sort_option,
            options_for_select(
              [
                %w[Year QuarterNumber],
                %w[District District],
                ["First Name(s)", "GivenName"],
                %w[Surname Surname]
              ],
              selected: @sort_condition
            ),
            { prompt: "Sort By", id: "sort_results", tabindex: "0" }
          ) %>
        </div>

        <div class="grid__item desk-wide-one-quarter desk-one-quarter lap-one-half palm-one-whole">
          <%= label_tag "results_per_page", "Show" %>
          <%= select_tag :results_per_page,
          options_for_select([5, 20, 40, 60, 80, 100], selected: @results_per_page),
          id: "results_per_page",
          tabindex: 0 %>
        </div>

        <div class="grid__item desk-wide-one-quarter desk-one-quarter lap-one-half palm-one-whole">
          <%= button_tag "Update Results",
          class: "spinner-controller ladda-button push--top update_results",
          id: "filter_form_submit",
          data: {
            :style => "zoom-out",
            :color => appname.downcase,
            :size => "s",
            "spinner-color" => "#ffffff"
          } %>
          <%#= submit_tag "Filter", class: 'ladda-button spinner-controller', id: 'submit_filter' %>
        </div>

      </div>
    <% end %>

  </div>
</div>
